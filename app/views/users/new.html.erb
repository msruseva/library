<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |message|  %>
			<li style="color: red"><%= message %></li>
		<% end %>
	</ul>
<% end %>

<div class="position">
	<h3 style="color: #AB6BE0;">Create User</h3>

	<%= form_for(@user) do |f| %>
		<%= f.text_field :username, placeholder: "username", maxlength: 12 %>
		<%= f.password_field :password, placeholder: "password", minlength: 8 %>
		<%= f.submit %>
	<% end %>

	<%= button_to "Already have account", login_path, method: :get %>
</div>